<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/viewsparent"
        android:gravity="center"
        android:background="@color/message"

        >

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageview"
            android:visibility="gone"
            android:adjustViewBounds="true"
        />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/message"
            android:scaleType="center"
            android:id="@+id/media_container">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/message"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                 />

            <ImageView
                android:id="@+id/volume_control"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:animateLayoutChanges="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_volume_up_24" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:visibility="gone"
                android:layout_gravity="center" />
        </FrameLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewsparent"
        android:layout_marginTop="21dp"
        android:text="Tittle"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discription"
        android:text="Discription"
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/title"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/discription"
        android:layout_marginTop="5dp"
        android:text="date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:id="@+id/likeComment"

        >



        <com.google.android.material.button.MaterialButton

            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:icon="@mipmap/profile"
            android:gravity="center"
            android:text="1"
            style="@style/IconWithText"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
           app:icon="@mipmap/profile"
            android:gravity="center"
            android:text="1"

            style="@style/IconWithText"
            />


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profile"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/viewsparent"
        android:src="@drawable/facebook"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-30dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/likeComment"
        android:layout_marginTop="0dp"
        android:background="@color/blue"
        />


</RelativeLayout>